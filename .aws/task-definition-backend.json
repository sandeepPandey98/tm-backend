{
  "family": "task-management-backend-task-definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::103855225207:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::103855225207:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "task-management-backend",
      "image": "103855225207.dkr.ecr.eu-north-1.amazonaws.com/task-management-backend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "JWT_SECRET",
          "value": "your-super-secret-jwt-key-change-this-in-production"
        },
        {
          "name": "JWT_EXPIRES_IN",
          "value": "7d"
        },
        {
          "name": "BCRYPT_SALT_ROUNDS",
          "value": "12"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:103855225207:secret:task-management/mongodb-uri"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task-management-backend",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3000/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
